<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Situação <small>Editar</small></h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a href="/situations?page=1"><i class="fa fa-bars text-primary"></i></a></li>
                                <li><a href=""><i class="fa fa-edit"></i></a></li>
                                <li><a href=""><i class="fa fa-trash"></i></a></li>
                            </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        {{>_msgAdm}}
                        <div class="col-md-2 col-sm-2  profile_left">
                            <div class="profile_img">
                                <div id="crop-avatar">
                                    <img class="img-responsive avatar-view" src="/images/util/config.png" width="150px"
                                        height="150px" alt="Avatar" title="Change the avatar">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-10 col-sm-10 ">
                            <div class="" role="tabpanel" data-example-id="togglable-tabs">
                                <!-- start recent activity -->
                                <div class="col-md-12 ">
                                    <div class="x_panel">
                                        <div class="x_title">
                                            <h2><small>Informações</small></h2>
                                            <div class="clearfix"></div>
                                        </div>
                                        <div class="x_content">
                                            <br />
                                            <form class="form-horizontal form-label-left" action="/situations/edit" method="post">
                                                <input type="hidden" name="id" id="id" value="{{data.id}}">
                                                <div class="form-group row ">
                                                    <label class="control-label col-md-3 col-sm-3 ">Nome da Situação</label>
                                                    <div class="col-md-9 col-sm-9 ">
                                                        <input name="nameSituation" id="nameSituation" type="text" class="form-control" value="{{data.nameSituation}}">
                                                    </div>
                                                </div>
                                                <div class="ln_solid"></div>
                                                <div class="form-group">
                                                    <div class="col-md-9 col-sm-9  offset-md-3">
                                                        <button type="button" class="btn btn-primary">Cancel</button>
                                                        <input type="submit" value="Editar" class="btn btn-success"/>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <!-- end recent activity -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->