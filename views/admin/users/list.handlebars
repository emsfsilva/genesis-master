<style>
    th, td {border-bottom: 1px solid #ddd; text-align: center;}
    .td_laranja {color: orange;}
    .td_verde {color: green;}
    .td_vermelho {color: red;}
    .contas {color: orange;}
    .td_unidades {border-bottom: 1px solid #ddd; text-align: left;}
    th {background-color: #1a8770;color: white; text-align: center;}
    tr:hover {background-color: #f5f5f5}
    tr:nth-child(even) {background-color: #f2f2f2}
</style>

<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-12">
                    <div class="x_panel">
                        <div class="x_title">
                        <h2>Usuarios</h2>
                        <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <div class="row">
                                <!-- LISTA GERAL DOS EVENTOS -->                
                                <div class="col-sm-12 mail_view">
                                        <a href="/users/add" class="btn btn-sm btn-success btn-block" type="button">Cadastrar Usuario</a>
                                    <div class="inbox-body">
                                        <div class="view-mail card-box table-responsive">
                                            {{>_msgAdm}}
                                            <table id="datatable"  style="width:100%">
                                                <thead>
                                                <tr>
                                                    <th>Foto</th>
                                                    <th>Matricula</th>
                                                    <th>Nome</th>
                                                    <th>Email</th>
                                                    <th>OME</th>
                                                    <th>Situação</th>
                                                    <th>Credencial Id</th>
                                                    <th>Login Sei</th>
                                                    <th>Telefone</th>
                                                    <th>Ações:</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {{#each users}}
                                                <tr>
                                                    <td class="esc">
                                                        {{#if image}}
                                                            <img src="/images/users/{{image}}" width="40px" height="40px" class="img-circle img-responsive">
                                                        {{else}}
                                                            <img src="/images/users/user.jpg" width="40px" height="40px" class="img-circle img-responsive">
                                                        {{/if}}    
                                                    </td>
                                                    <td>{{matricula}}</td>
                                                    <td>{{name}}</td>
                                                    <td>{{email}}</td>
                                                    <td>{{ome.nome}}</td>
                                                    <td>{{situation.nameSituation}}</td>
                                                    <td>{{PcontasOme.nome}}</td>
                                                    <td>{{loginsei}}</td>
                                                    <td>{{telefone}}</td>
                                                    <td>
                                                    <a href="/users/view/{{id}}"><i class="fa fa-eye text-primary" ></i></a>
                                                    <a href="/users/edit/{{id}}"><i class="fa fa-edit text-primary" ></i></a>
                                                    <a href="/users/delete/{{id}}" onclick="return confirm('Tem certeza que deseja excluir este registro?')"><i class="fa fa-trash text-danger"></i></a>
                                                </td>
                                                </tr>
                                                {{/each}} 
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <!-- /LISTA GERAL DOS EVENTOS -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

    